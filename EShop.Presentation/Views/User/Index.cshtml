@model List<UserListViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@if (!Model.Any())
{
    <h1>No Users</h1>
}
else
{
    <h1>User List</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>User ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>User Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.UserType.Type</td>
                </tr>
            }
        </tbody>
    </table>
}
