@model EShop.Presentation.Models.Product.CreateProductViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Create New Product</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group my-1">
        <label for="Price">Price:</label>
        <input type="number" class="form-control" required id="Price" name="Price" value="@Model.Price">
    </div>
    <div class="form-group my-1">
        <label for="Quantity">Quantity:</label>
        <input type="number" class="form-control" required id="Quantity" name="Quantity" value="@Model.Quantity">
    </div>
    <div class="form-group my-1">
        <label for="Description">Description:</label>
        <input type="text" class="form-control" required id="Description" name="Description" value="@Model.Description">
    </div>
    <div class="form-group my-1">
        <label for="Image">Image:</label>
        @* <input type="file" required class="form-control-file" id="Image" name="Image"> *@
        <input type="file" class="form-control-file" id="Image" name="Image">
    </div>
    

    @Html.DropDownListFor(m => m.ProductTypeId, Model.ProductTypes, new { @class = "form-control" })

    <button type="submit" class="btn btn-primary my-3">Create</button>
</form>
